@model PrescriptionViewModel
@{
    ViewBag.Title = "Prescription Details";
}
<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="container" style="display:inline">
    <div class="row">
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.DrugBrandName</u></p>
            <p>Disease treated: <b>@Model.DiseaseName</b></p>
            <p>Issued on: <b>@Model.CreatedOn</b></p>
            <p>Valid until: <b>@Model.ValidUntil</b></p>
            <p>Patient email: <b>@Model.PatientEmail</b></p>
            <p>Patient email: <b>@Model.PatientEmail</b></p>
            <p>Medication frequency: <b>@Model.MedicationFrequency</b></p>
            <p>Notes: <b>@Model.Notes</b></p>
        </div>
    </div>
</div>