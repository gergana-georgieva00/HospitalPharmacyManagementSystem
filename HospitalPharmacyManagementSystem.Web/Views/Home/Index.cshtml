@model IEnumerable<IndexViewModel>
@{
    ViewData["Title"] = "Home Page";
    var drugs = Model.ToList();
}

<div class="mt-2 p-5">
    <h1 class="display-6" style="position:relative; left:300px">Welcome to DrugWise - the future of patient care!</h1>
    @if (!drugs.Any())
    {
        <p class="lead">
            There are no drugs in the system currently available!
        </p>
    }
    <hr class="my-4">
    <p class="lead">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a asp-controller="Drug" asp-action="Add" class="btn btn-primary btn-lg"
               role="button">Prescribe</a>
        }
    </p>
</div>

