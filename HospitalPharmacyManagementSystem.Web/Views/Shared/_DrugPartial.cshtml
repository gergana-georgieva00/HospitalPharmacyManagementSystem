<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="Drug Image">
        <div class="card-body text-center">
            <h4>@Model.BrandName</h4>
            <h6>
                Price:
                <b>@($"{Model.Price:f2}") BGN</b>
            </h6>
            <br />
            <a asp-controller="Drug" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <a asp-controller="Drug" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-warning">Edit</a>
                <a asp-controller="Drug" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-danger">Delete</a>
            }
        </div>
    </div>
</div>